<p id="notice"><%= notice %></p>

<h1>
    <%= label_tag(:search_recipe, "Search recepie:") %>
    <%= text_field_tag(:search_recipe) %>
</h1>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th>Description</th>
      <th>Products</th>
      <th>Prepration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="recipes">
    <% @recipes.each do |recipe| %>
      <tr>
        <td>
            <% if recipe.icon_file_name %>
                <%= image_tag recipe.icon.url(:thumb) %>
            <% end %>
        </td>
        <td><%= recipe.name %></td>
        <td><%= recipe.description[0..80] %>...</td>
        <!--
        <td><%= recipe.products %></td>
        <td><%= recipe.prepration %></td>
        -->
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
